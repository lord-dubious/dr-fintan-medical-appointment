# =============================================================================
# DR. FINTAN MEDICAL APPOINTMENT SYSTEM - ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains all the environment variables needed to replicate
# the Dr. Fintan Medical Appointment System installation.
# Copy this file to .env and update the values according to your setup.
# =============================================================================

# Application Configuration
APP_NAME="Dr. Fintan Medical Appointment System"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://your-domain.com

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance & Performance
APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Main database connection (MySQL/MariaDB recommended)
DB_CONNECTION=mysql
DB_URL=mysql://username:password@host:port/database?ssl-mode=REQUIRED
DB_HOST=your-database-host.com
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# =============================================================================
# SESSION & CACHE CONFIGURATION
# =============================================================================
# Session Configuration (Redis recommended for production)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Cache Configuration (Redis recommended for production)
CACHE_STORE=redis
# CACHE_PREFIX=

# Queue Configuration (Redis recommended for production)
QUEUE_CONNECTION=redis

# Broadcast Configuration
BROADCAST_CONNECTION=log

# File Storage
FILESYSTEM_DISK=local

# =============================================================================
# REDIS CONFIGURATION (Required for Sessions, Cache, and Queues)
# =============================================================================
REDIS_CLIENT=predis
REDIS_URL=rediss://default:password@host:port
REDIS_HOST=your-redis-host.com
REDIS_PASSWORD=your_redis_password
REDIS_PORT=6379
REDIS_SCHEME=tls

# Memcached (Alternative to Redis)
MEMCACHED_HOST=127.0.0.1

# =============================================================================
# DAILY.CO VIDEO CALLING CONFIGURATION (REQUIRED)
# =============================================================================
# Daily.co API credentials for video consultation functionality
# Get these from: https://dashboard.daily.co/
DAILY_API_KEY=your_daily_api_key_here
DAILY_DOMAIN=your-subdomain.daily.co

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email settings for appointment notifications and system emails
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=your-smtp-host.com
MAIL_PORT=587
MAIL_USERNAME=your_email_username
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION
# =============================================================================
# Paystack Configuration (Primary payment processor)
# Get these from: https://dashboard.paystack.com/
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_CALLBACK_URL="${APP_URL}/appointment/payment/callback"
PAYSTACK_WEBHOOK_URL="${APP_URL}/paystack/webhook"

# =============================================================================
# CLOUD STORAGE CONFIGURATION (OPTIONAL)
# =============================================================================
# AWS S3 Configuration (for file uploads and media storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your_s3_bucket_name
AWS_USE_PATH_STYLE_ENDPOINT=false

# Cloudflare R2 Configuration (Alternative to AWS S3)
CLOUDFLARE_R2_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_key
CLOUDFLARE_R2_BUCKET_NAME=your_r2_bucket_name
CLOUDFLARE_R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com

# =============================================================================
# ADDITIONAL SERVICES (OPTIONAL)
# =============================================================================
# Pusher Configuration (for real-time notifications)
PUSHER_APP_ID=your_pusher_app_id
PUSHER_APP_KEY=your_pusher_app_key
PUSHER_APP_SECRET=your_pusher_app_secret
PUSHER_HOST=api.pusherapp.com
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Vite Configuration (for frontend asset compilation)
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
