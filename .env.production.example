# =============================================================================
# DR. FINTAN MEDICAL APPOINTMENT SYSTEM - PRODUCTION ENVIRONMENT
# =============================================================================
# This is a production-ready environment configuration template for Render
# Copy the values from your .env.example and update with production values
# =============================================================================

# Application Configuration
APP_NAME="Dr. Fintan Medical Appointment System"
APP_ENV=production
APP_KEY=base64:REPLACE_WITH_GENERATED_KEY_FROM_ARTISAN_KEY_GENERATE
APP_DEBUG=false
APP_URL=https://your-render-app.onrender.com

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance & Performance
APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# Logging Configuration (Render-optimized)
LOG_CHANNEL=stderr
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# =============================================================================
# DATABASE CONFIGURATION (Render External Database)
# =============================================================================
# These will be automatically set by Render when you connect a database
DB_CONNECTION=mysql
DB_URL=${DATABASE_URL}
DB_HOST=your-render-database-host
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# =============================================================================
# REDIS CONFIGURATION (Render External Redis)
# =============================================================================
# These will be automatically set by Render when you connect Redis
REDIS_CLIENT=predis
REDIS_URL=${REDIS_URL}
REDIS_HOST=your-render-redis-host
REDIS_PASSWORD=your_redis_password
REDIS_PORT=6379
REDIS_SCHEME=tls

# Session, Cache, and Queue Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=redis
QUEUE_CONNECTION=redis
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# =============================================================================
# DAILY.CO VIDEO CALLING CONFIGURATION (REQUIRED)
# =============================================================================
DAILY_API_KEY=your_production_daily_api_key
DAILY_DOMAIN=your-production-subdomain.daily.co

# =============================================================================
# EMAIL CONFIGURATION (Production SMTP)
# =============================================================================
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=your-production-smtp-host.com
MAIL_PORT=587
MAIL_USERNAME=your_production_email_username
MAIL_PASSWORD=your_production_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION (Production Keys)
# =============================================================================
PAYSTACK_PUBLIC_KEY=pk_live_your_production_paystack_public_key
PAYSTACK_SECRET_KEY=sk_live_your_production_paystack_secret_key
PAYSTACK_CALLBACK_URL="${APP_URL}/appointment/payment/callback"
PAYSTACK_WEBHOOK_URL="${APP_URL}/paystack/webhook"

# =============================================================================
# CLOUD STORAGE CONFIGURATION (Optional - for file uploads)
# =============================================================================
AWS_ACCESS_KEY_ID=your_production_aws_access_key
AWS_SECRET_ACCESS_KEY=your_production_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your_production_s3_bucket_name
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# ADDITIONAL SERVICES (Optional)
# =============================================================================
PUSHER_APP_ID=your_production_pusher_app_id
PUSHER_APP_KEY=your_production_pusher_app_key
PUSHER_APP_SECRET=your_production_pusher_app_secret
PUSHER_HOST=api.pusherapp.com
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"


